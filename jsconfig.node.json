  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "./",
    "checkJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowJs": true,
    "noEmit": true,

    /* Linting */
    "strict": true
  },
  "include": ["vite.config.js"]
}